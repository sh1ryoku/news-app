<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/news_card_height"
    android:layout_marginBottom="@dimen/app_margin"
    app:cardCornerRadius="@dimen/card_corner_radius">

    <ImageView
        android:id="@+id/newsCardIV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_inside_card">

        <TextView
            android:id="@+id/newsCardTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/margin_inside_card"
            android:layout_marginEnd="@dimen/margin_inside_card"
            android:fontFamily="@font/new_york_small"
            android:textColor="@color/white"
            android:textSize="@dimen/main_text_size"
            android:maxLines="2"
            />
        <TextView
            android:id="@+id/newsCardAuthorName"
            android:layout_width="0dp"
            android:layout_height="21dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/newsCardPublicationDate"
            android:layout_marginStart="@dimen/margin_inside_card"
            android:fontFamily="@font/nunito_regular"
            android:textColor="@color/white"
            android:textSize="@dimen/second_text_size"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/newsCardPublicationDate"
            android:layout_width="0dp"
            android:layout_height="21dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/newsCardAuthorName"
            android:layout_marginEnd="@dimen/margin_inside_card"
            android:fontFamily="@font/nunito_regular"
            android:gravity="end"
            android:textSize="@dimen/second_text_size"
            android:textColor="@color/white"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>